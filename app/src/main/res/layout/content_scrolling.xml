<?xml version="1.0" encoding="utf-8"?>
<!--layout_behavior 必须有这个属性来表达在AppBarLayout之下，
不然在CoordinatorLayout中，下面显示内容会变成底层，
因为CoordinatorLayout类似FragmentLayout-->

<!--NestedScrollView和appbarLyout是平级的，类似ScrollView
    基础之上增加了嵌套滚动事件功能，因为外层CoordinatorLayout也可以滚动-->
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bb.offerapp.activity.OfferAppMainActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:id="@+id/viewpaper"
            android:layout_width="match_parent"
            android:layout_height="1330dp">
        </android.support.v4.view.ViewPager>




    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
